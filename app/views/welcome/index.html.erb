<!DOCTYPE html>
<html>
<head>
	<title>Portal BI</title>
	<style>
	    html {
   margin: 0px;
   height: 100%;
   width: 100%;
}

body {
   margin: 0px;
   
   width: 100%;
   height: 100%;
}
	</style>
</head>
<body style="background-color: black;">
<%= image_tag("/logo_tel.png", :style => "position: absolute;top: 0px;left: 0px;width: 100%;height: 200px;") %>
<%= image_tag("/company_logo.png", :style => "position: absolute;top: 50px;left: 15%;width: 15%;") %>
<%= image_tag("/login_cuadro.png", :style => "position: absolute;top: 230px;left: 39%;width: 22%;") %>
<p style="position:absolute;top:230px;left:46%;;color: white;text-align: center;font-size: 2em;">Login</p>
<%= form_for :client, :html => { :style => 'position:absolute;top:330px;left:43%;' }, :url => { :controller => "welcome", :action => "login"} do |f| %>
  <p style="color: white">Usuario</p><%= f.text_field :usuario %><br>
  <p style="color: white">Password</p><%= f.password_field :password %><br><br>
  <%= f.submit "Ingresar"  %><br>
   
 <% end %>


</body>
</html>