<!DOCTYPE html>
<html>
<head>
	<title>Portal BI</title>
	<style>
	    html {
   margin: 0px;
   height: 100%;
   width: 100%;
}

body {
   margin: 0px;
   
   width: 100%;
   height: 100%;
}
	</style>
</head>
<body style="background-color: white;">
<%= image_tag("/logo_tel.png", :style => "position: absolute;top: 0px;left: 0px;width: 100%;height: 200px;") %>
<%= image_tag("/company_logo.png", :style => "position: absolute;top: 50px;left: 15%;width: 15%;") %>
<div style="position: absolute; top: 200px;width: 100%;height: 50px; background-color : #47d1d1"></div>
<div style="position: absolute;top: 250px;width: 20%;bottom: 0px;"><img style="height: 100%;width: 100%;" src="/login_cuadro.png" ></div>
<%= form_for :clientes, :html => { :style => 'position:absolute;top:50px;right:80px;' }, :url => { :controller => "welcome", :action => "index"} do |f| %>
  <%= f.submit "Inicio"  %>
 <% end %>
 <%= form_for :clientes, :html => { :style => 'position:absolute;top:300px;left:80px;' }, :url => { :controller => "welcome", :action => "index"} do |f| %>
  <%= f.submit "Crear Usuario"  %>
<% end %>
<%= form_for :clientes, :html => { :style => 'position:absolute;top:350px;left:80px;' }, :url => { :controller => "welcome", :action => "admin_casos"} do |f| %>
  <%= f.submit "Ver Casos"  %>
 <% end %>
 <%= form_for :client, :html => { :style => 'position:absolute;top:250px;left:25%;' }, :url => { :controller => "welcome", :action => "crear_usuario"}, :method => 'get' do |f| %>
  <p style="font-size: 1.3em;"><b>Datos del usuario</b></p>
  Usuario<br><%= f.text_field :usuario %><br>
  Password<br><%= f.text_field :password %><br>
  Tipo<br><%= f.select :tipo, ['cliente', 'consultor','admin']%><br>
  Area VP<br><%= f.text_field :areavp %><br>
  GG<br><%= f.text_field :gg %><br />
  Gerencia<br><%= f.text_field :gerencia %><br />
  Nombre<br><%= f.text_field :nombre %><br />
  Cargo<br><%= f.text_field :cargo %><br />
  IDOP<br><%= f.text_field :idop %><br /><br>
  <%= f.submit "Crear Usuario"  %>
 <% end %>
</body>
</html>